# AlgoTradeX Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/algotrader

# Application Settings
DEBUG=True
APP_NAME=AlgoTradeX
APP_VERSION=1.0.0

# Trading Configuration
DEFAULT_INITIAL_CAPITAL=100000.0
TRANSACTION_COST_PERCENT=0.05

# API Settings
API_V1_PREFIX=/api/v1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000,https://*.streamlit.app

# Data Fetching
YFINANCE_DELAY=1.0
MAX_WORKERS=5

# WebSocket
WS_HEARTBEAT_INTERVAL=30

# Redis (Optional)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=algotrader.log
